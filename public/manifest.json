
{
  "manifest_version": 3,
  "name": "Online Signature",
  "version": "0.0.0.1",  
  "description": "The Online Signature Chrome Extension is a secure and privacy-friendly tool for creating and saving digital signatures.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "pencil-case.png",
    "32": "pencil-case.png",
    "48": "pencil-case.png",
    "128": "pencil-case.png"
  },
  "content_scripts": [
    {
     "matches": ["https://google.com/*"], 
     "js": ["/static/js/main.js"]
    }
  ]
}
